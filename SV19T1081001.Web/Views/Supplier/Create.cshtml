@model SV19T1081001.DomainModel.Supplier
@{

}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <form class="form-horizontal" action="~/supplier/save" method="post">
        <div class="box-body">
            @*<input type="hidden" id="SupplierID" name="SupplierID" autofocus value="@Model.SupplierID" />*@
            @Html.HiddenFor(m => m.SupplierID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Nhà Cung Cấp: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="SupplierName" name="SupplierName" autofocus value="@Model.SupplierName" />*@
                    @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.SupplierName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="ContactName" name="ContactName" value="@Model.ContactName" />*@
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />*@
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone" />*@
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia: </label>
                <div class="col-sm-10">
                    @*<select type="text" class="form-control" id="Country" name="Country">
                            @{
                                foreach (var c in SV19T1081001.BusinessLayer.CommonDataService.ListOfCountry())
                                {
                                    if (c.CountryName == Model.Country)
                                    {
                                        <option selected value="@c.CountryName">@c.CountryName</option>
                                    }
                                    else
                                    {
                                        <option>@c.CountryName</option>
                                    }
                                }
                            }
                        </select>*@
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="City" name="City" value="@Model.City" />*@
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="PostalCode" name="PostalCode" value="@Model.PostalCode" />*@
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                </div>
            </div>


        </div>
        <div class="box-footer">
            <div class="form-group ">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu dữ liệu</button>
                    <a href="~/customer" class="btn btn-warning"><i class="fa fa-step-backward"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

