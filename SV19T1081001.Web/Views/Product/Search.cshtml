@model SV19T1081001.DomainModel.ProductPaginationResult
@{
    Layout = null;
}

<br />
<p>
    Có tổng cộng <b>@Model.RowCount</b> mặt hàng trong tổng số <b>@Model.PageCount</b> trang
</p>

<div class="box">
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered table-responsive table-hover table-striped">
            <thead class="bg-primary">
                <tr class="bg-primary">
                    <th style="width:80px">Ảnh</th>
                    <th>Tên mặt hàng</th>
                    <th>Đơn vị tính</th>
                    <th>Giá</th>
                    <th style="width:75px">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <img src="/@item.Photo" style="width:80px" onerror="this.onerror=null;this.src='/Images/default.jpg';" />
                        </td>
                        <td style="vertical-align:middle">@item.ProductName</td>
                        <td style="vertical-align:middle">@item.Unit</td>
                        <td style="vertical-align:middle">@item.Price</td>
                        <td class="text-right" style="vertical-align:middle">
                            <a href="~/product/edit/@item.ProductID" class="btn btn-xs btn-flat btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/product/delete/@item.ProductID" class="btn btn-xs btn-flat btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
        <ul class="pagination no-margin pull-right">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
        </ul>
    </div>
</div>