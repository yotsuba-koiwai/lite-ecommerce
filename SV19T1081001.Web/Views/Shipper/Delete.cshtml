@model SV19T1081001.DomainModel.Shipper
@{
    ViewBag.Title = "Xóa Người Giao Hàng";
}


<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <form class="form-horizontal"  action="~/shipper/delete/@Model.ShipperID" method="post">
        <div class="box-body">

            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Tên người giao hàng: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Số điện thoại: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV19T1081001.BusinessLayer.CommonDataService.InUsedShipper(Model.ShipperID))
                    {
                        <p class="text-danger">Không được xóa người giao hàng này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="fa fa-close"></i> Xóa dữ liệu</button>
                    }
                    <a href="~/shipper" class="btn btn-warning"><i class="fa fa-step-backward"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

