@model SV19T1081001.DomainModel.ShipperPaginationResult
@{
    Layout = null;
}
<br />
<p>Có tổng cộng <b>@Model.RowCount</b> khách hàng trong tổng số <b>@Model.PageCount</b> trang</p>

<div class="box">
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered table-responsive table-hover table-striped">
            <thead class="bg-primary">
                <tr>
                    <th>Tên người giao hàng</th>
                    <th>Số điện thoại</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.ShipperName</td>
                        <td>@item.Phone</td>
                        <td class="text-center">
                            <a href="~/shipper/edit/@item.ShipperID" class="btn btn-xs btn-success"><i class="fa fa-edit"></i></a>
                            <a href="~/shipper/delete/@item.ShipperID" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    @if (Model.PageCount > 1) { 
    <div class="box-footer clearfix">
        <ul class="pagination no-margin pull-right">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
        </ul>
    </div>
    }
    <!-- /.box -->

</div>



