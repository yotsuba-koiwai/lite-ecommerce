@model SV19T1081001.DomainModel.Shipper
@{

}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <form class="form-horizontal" action="~/shipper/save" method="post">
        <div class="box-body">
            @*<input type="hidden" id="ShipperID" name="ShipperID" autofocus value="@Model.ShipperID" />*@
            @Html.HiddenFor(m => m.ShipperID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Người Giao Hàng: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="ShipperName" name="ShipperName" autofocus value="@Model.ShipperName" />*@
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số Điện Thoại: </label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone" />*@
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="form-group ">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu dữ liệu</button>
                    <a href="~/shipper" class="btn btn-warning"><i class="fa fa-step-backward"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

