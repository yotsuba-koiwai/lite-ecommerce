@model SV19T1081001.DomainModel.Customer
@{
    ViewBag.Title = "Xóa Khách Hàng";
}


<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <form class="form-horizontal" action="~/customer/delete/@Model.CustomerID" method="post">
        <div class="box-body">

            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Tên khách hàng: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CustomerName</p>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Tên giao dịch: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Địa chỉ: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Quốc gia: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Country</p>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Thành phố: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.City</p>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Mã bưu chính: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.PostalCode</p>
                </div>
            </div>


        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV19T1081001.BusinessLayer.CommonDataService.InUsedCustomer(Model.CustomerID))
                    {
                        <p class="text-danger">Không được xóa khách hàng này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="fa fa-close"></i> Xóa dữ liệu</button>
                    }
                    <a href="~/customer" class="btn btn-warning"><i class="fa fa-step-backward"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

