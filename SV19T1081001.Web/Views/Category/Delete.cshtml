@model SV19T1081001.DomainModel.Category
@{
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <form class="form-horizontal" action="~/category/delete/@Model.CategoryID" method="post">
        <div class="box-body">

            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Tên loại hàng: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px dotted #ccc;">
                <label class="control-label col-sm-2">Mô tả: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV19T1081001.BusinessLayer.CommonDataService.InUsedCategory(Model.CategoryID))
                    {
                        <p class="text-danger">Không được xóa loại hàng này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="fa fa-close"></i> Xóa dữ liệu</button>
                    }
                    <a href="~/category" class="btn btn-warning"><i class="fa fa-step-backward"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>


